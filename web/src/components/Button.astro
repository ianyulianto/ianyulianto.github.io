---
interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a 
  href={href} 
  class:list={[
    "group relative inline-flex items-center justify-center gap-3 px-8 py-3 border border-black bg-black text-white text-sm font-semibold tracking-[0.35em] uppercase shadow-[6px_6px_0_rgba(0,0,0,0.6)] transition-all duration-300",
    "hover:-translate-y-1 hover:text-black hover:bg-white",
    className
  ]}
>
  <span class="absolute inset-0 border border-white/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></span>
  <span class="relative z-10 flex items-center gap-3">
    <slot />
    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="square" stroke-linejoin="miter" d="M5 12h14M13 6l6 6-6 6" />
    </svg>
  </span>
</a>
