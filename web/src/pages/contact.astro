---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

const contactOptions = [
  {
    label: 'Email',
    value: 'ian.yulianto@live.com',
    href: 'mailto:ian.yulianto@live.com',
    detail: 'Best for proposals or consulting briefs.',
  },
  {
    label: 'LinkedIn',
    value: 'Connect on LinkedIn',
    href: 'https://linkedin.com/in/ianyulianto',
    detail: 'Letâ€™s talk career stories and collaboration.',
  },
  {
    label: 'GitHub',
    value: 'Debug Life Indonesia',
    href: 'https://github.com/debuglife-indonesia',
    detail: 'Explore open projects & experiments.',
  },
];
---

<Layout title="Contact Me - Ian Yulianto">
  <!-- Header Section -->
  <section class="mb-16 animate-fade-in-up">
    <p class="accent-chip mb-6">Contact</p>
    <h1 class="text-4xl md:text-5xl font-extrabold mb-6">Get In Touch</h1>
    <p class="text-xl text-black/60 max-w-2xl leading-relaxed">
      For collaborations, project inquiries, or technical discussions, reach out via your preferred
      channel. I respond within one business day.
    </p>
  </section>

  <!-- Contact Options -->
  <section class="mb-20 animate-fade-in-up delay-100">
    <div class="grid md:grid-cols-3 gap-6">
      {
        contactOptions.map((option) => (
          <a
            href={option.href}
            target={option.href.startsWith('http') ? '_blank' : undefined}
            rel={option.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            class="outline-shell bg-white/95 p-8 text-black/80"
          >
            <h3 class="text-xl font-bold mb-2">{option.label}</h3>
            <p class="text-black mb-2">{option.value}</p>
            <p class="text-sm text-black/60">{option.detail}</p>
          </a>
        ))
      }
    </div>
  </section>

  <div class="my-20 h-px bg-black/10 relative">
    <span class="accent-chip absolute left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white px-4"
      >Speaking</span
    >
  </div>

  <!-- Speaker Collaboration CTA -->
  <section class="max-w-2xl animate-fade-in-up delay-200">
    <h2 class="text-3xl font-bold mb-6">Invite Me as a Speaker</h2>
    <p class="text-xl text-black/60 mb-10 leading-relaxed">
      Interested in having me speak at your event, workshop, or podcast? Let's discuss how we can
      collaborate to share knowledge about DevOps, Cloud Computing, and Tech Career Growth.
    </p>
    <a
      href="https://wa.me/628113078217"
      target="_blank"
      rel="noopener noreferrer"
      class="outline-shell bg-black text-white inline-flex items-center gap-4 px-8 py-5"
    >
      <span class="text-lg font-bold">Chat on WhatsApp</span>
      <span class="text-sm uppercase tracking-[0.3em]">Start</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
      >
        <path
          d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
