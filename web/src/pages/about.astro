---
import Layout from '../layouts/Layout.astro';

const profileStats = [
  { label: 'Role', value: 'Senior DevOps Engineer' },
  { label: 'Location', value: 'Indonesia (Remote)' },
  { label: 'Experience', value: '10+ years' },
  { label: 'Focus', value: 'AWS, DevOps, Team Communication' },
];

const skillRows = [
  { category: 'Cloud', skills: 'AWS (ECS, Fargate, S3, Lambda, VPC, RDS, CloudFormation, CDK)' },
  { category: 'DevOps', skills: 'Docker, CI/CD, GitHub Actions, IaC, ArgoCD' },
  { category: 'Soft Skills', skills: 'Team Communication, Mentoring, Leadership, Public Speaking' },
  { category: 'Monitoring', skills: 'CloudWatch, X-Ray, Grafana, Coroot' },
];

const experiences = [
  {
    title: 'Senior DevOps Engineer at PT CreateIT Solution Indonesia',
    timeframe: 'Oct 2025 â€” Present',
    description: 'Specializing in AWS and DevOps practices for contract projects.',
  },
  {
    title: 'Founder at Debug Life Indonesia',
    timeframe: 'Jun 2025 â€” Present',
    description:
      'Building a content and community platform to humanize tech careers, sharing stories of resilience and professional growth.',
  },
  {
    title: 'DevOps Coach & Mentor',
    timeframe: 'Jun 2025 â€” Oct 2025',
    description:
      'Helping tech teams build strong DevOps foundations and improving cross-functional communication.',
  },
];
---

<Layout title="About Me - Ian Yulianto">
  <!-- Introduction Section -->
  <section class="mb-16 animate-fade-in-up">
    <p class="accent-chip mb-6">Profile</p>
    <div class="grid md:grid-cols-[3fr_2fr] gap-12">
      <div class="space-y-6 text-black/70 text-lg leading-relaxed">
        <p>
          I am a Senior DevOps Engineer & AWS Specialist with 10+ years of experience architecting
          robust cloud infrastructure and automating complex workflows. My technical core lies in
          AWS, containerization, and building resilient CI/CD pipelines.
        </p>
        <p>
          Beyond the terminal, I am deeply passionate about knowledge sharing and community
          building. I founded <strong>Debug Life Indonesia</strong>, a platform dedicated to sharing
          real-world tech stories, career advice, and engineering best practices.
        </p>
        <p>
          ðŸ“º Check out my latest discussions and tutorials on YouTube: <a
            href="https://www.youtube.com/@debuglife.indonesia"
            target="_blank"
            class="font-bold outlined-link">Debug Life Indonesia</a
          >
        </p>
      </div>
      <div class="outline-shell bg-white/95 p-8 space-y-6">
        <p class="text-sm uppercase tracking-[0.3em] text-black/50">Now working on</p>
        <ul class="space-y-4 text-black/70">
          <li>Scaling DevOps foundations for high-trust contract projects.</li>
          <li>Documenting the journey through Debug Life Indonesia.</li>
          <li>Coaching engineers on communication and delivery rhythms.</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Profile Outline Box -->
  <section class="mb-16 animate-fade-in-up delay-100">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {
        profileStats.map((item) => (
          <div class="border border-black/30 bg-white/80 px-6 py-5 shadow-[4px_4px_0_rgba(0,0,0,0.25)]">
            <span class="text-sm uppercase tracking-[0.3em] text-black/40">{item.label}</span>
            <p class="text-xl font-bold mt-2">{item.value}</p>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Skills Overview Table -->
  <section class="mb-16 animate-fade-in-up delay-200">
    <h2 class="text-2xl md:text-3xl font-extrabold mb-6">Skills Overview</h2>
    <div
      class="overflow-hidden border border-black/20 shadow-[6px_6px_0_rgba(0,0,0,0.2)] bg-white/90"
    >
      <table class="w-full border-collapse text-left">
        <thead class="bg-black text-white">
          <tr>
            <th class="py-4 px-6 w-1/4 text-xs uppercase tracking-[0.35em]">Category</th>
            <th class="py-4 px-6 text-xs uppercase tracking-[0.35em]">Skills</th>
          </tr>
        </thead>
        <tbody>
          {
            skillRows.map((row) => (
              <tr class="border-t border-black/10">
                <td class="py-5 px-6 font-semibold">{row.category}</td>
                <td class="py-5 px-6 text-black/70">{row.skills}</td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="animate-fade-in-up delay-300">
    <h2 class="text-2xl md:text-3xl font-extrabold mb-6">Experience</h2>
    <div class="relative pl-10 border-l-2 border-black/40">
      {
        experiences.map((role, index) => (
          <div class="relative pb-12 last:pb-0">
            <div class="absolute -left-[27px] top-1 h-5 w-5 border border-black bg-white flex items-center justify-center text-[0.6rem] font-bold">
              {String(index + 1).padStart(2, '0')}
            </div>
            <h3 class="text-xl font-bold">{role.title}</h3>
            <span class="text-sm text-black/50 block mb-2">{role.timeframe}</span>
            <p class="text-black/70">{role.description}</p>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
