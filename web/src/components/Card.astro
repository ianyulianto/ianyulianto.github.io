---
interface Props {
  title: string;
  class?: string;
  href?: string;
}

const { title, class: className, href } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag 
  href={href}
  class:list={[
    "relative block h-full overflow-hidden border border-black/20 bg-white px-7 py-8 shadow-[12px_12px_0_rgba(0,0,0,0.2)] transition-all duration-300",
    href && "hover:-translate-y-2 hover:-translate-x-1 hover:shadow-[18px_18px_0_rgba(0,0,0,0.25)] cursor-pointer",
    className
  ]}
>
  <span class="absolute inset-4 border border-dashed border-black/15 pointer-events-none" aria-hidden="true"></span>
  <span class="absolute -top-6 -right-6 h-16 w-16 border border-black/15" aria-hidden="true"></span>
  <div class="relative z-10">
    <div class="flex items-center gap-2 text-[0.63rem] uppercase tracking-[0.35em] text-black/40 mb-4">
      <span class="h-px w-6 bg-black/20"></span>
      {href ? 'Case File' : 'Capability'}
      <span class="h-px flex-1 bg-black/10"></span>
    </div>
    <h3 class="text-2xl font-extrabold mb-4 leading-snug">{title}</h3>
    <div class="text-[#4a4a4a] leading-relaxed">
      <slot />
    </div>
  </div>
</Tag>
